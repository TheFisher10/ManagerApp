<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".guest.SignActivity">

    <ScrollView
        android:id="@+id/ScrollViewID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/top_register_toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent">

            <RelativeLayout
                android:id="@+id/presentation"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:background="@color/blue_200"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/ic_action_name"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/ic_launcher"
                    android:contentDescription="@string/todo" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/anagrafica"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_below="@id/presentation">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="55dp"
                    android:layout_marginTop="50dp"
                    android:src="@drawable/ic_baseline_person_24"
                    android:contentDescription="@string/person_image" />

                <EditText
                    android:id="@+id/name"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="100dp"
                    android:autofillHints="@string/name"
                    android:hint="@string/name"
                    android:inputType="textPersonName"
                    android:backgroundTint="@color/blue_700"/>

                <EditText
                    android:id="@+id/surname"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:layout_marginStart="100dp"
                    android:autofillHints="@string/surname"
                    android:hint="@string/surname"
                    android:inputType="textPersonName"
                    android:backgroundTint="@color/blue_700"/>

                <EditText

                    android:id="@+id/serial_number"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="100dp"
                    android:layout_marginStart="100dp"
                    android:autofillHints="Matricola"
                    android:hint="@string/matricola_txtLabel"
                    android:inputType="number"
                    android:backgroundTint="@color/blue_700"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="250dp"
                android:layout_below="@id/anagrafica">
                <LinearLayout
                    android:id="@+id/corso"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingStart="55dp"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="RtlSymmetry,UseCompoundDrawables">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:contentDescription="@string/course"
                        android:src="@drawable/ic_baseline_book_24" />

                    <TextView
                        android:id="@+id/course"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:elegantTextHeight="true"
                        android:text="@string/select_course"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:typeface="normal" />

                </LinearLayout>

                <Button
                    android:id="@+id/add_course"
                    android:layout_below="@id/corso"
                    android:layout_width="250dp"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content"
                    android:text="@string/add_course"
                    android:layout_marginStart="100dp"
                    android:background="@color/success_green"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:typeface="normal"
                />

                <LinearLayout
                    android:id="@+id/email_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingStart="55dp"
                    android:paddingEnd="55dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_below="@id/add_course">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:contentDescription="@string/email"
                        android:src="@drawable/ic_baseline_email_24" />

                    <EditText
                        android:id="@+id/email"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:textSize="18sp"
                        tools:ignore="RtlSymmetry"
                        android:autofillHints="@string/e_mail"
                        android:hint="@string/e_mail"
                        android:inputType="textEmailAddress"
                        android:backgroundTint="@color/blue_700"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/password_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingStart="55dp"
                    android:paddingEnd="55dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_below="@id/email_layout">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:contentDescription="@string/course"
                        android:src="@drawable/ic_baseline_vpn_key_24" />

                    <EditText
                        android:id="@+id/password"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:textSize="18sp"
                        android:autofillHints="@string/password"
                        android:hint="@string/password"
                        android:inputType="textPassword"
                        android:backgroundTint="@color/blue_700"/>
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/top_register_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/blue_500"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/top_register_menu"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">
    </androidx.appcompat.widget.Toolbar>

</androidx.constraintlayout.widget.ConstraintLayout>